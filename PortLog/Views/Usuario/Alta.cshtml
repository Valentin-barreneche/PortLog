@model Dominio.Usuario
@{
    ViewBag.Title = "Alta";
}

<h2>Alta</h2>

<form method="post" action="/Usuario/Alta">
    <div class="form-group">
        <label for="exampleInputEmail1">Ingrese cedula de Identidad</label>
        <input type="text" class="form-control" placeholder="Ingrese nombre" name="cedula" value="@Model.Cedula">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Ingrese Contraseña</label>
        <input type="password" class="form-control" name="contrasenia" placeholder="Ingrese contraseña" value="@Model.Contrasenia">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Ingrese Rol</label>
        <select name="rol">
            <option selected>Elija una opcion...</option>
            <option value="deposito">Deposito</option>
            <option value="admin">Administrador</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@if (ViewBag.mensaje != null)
{
<div class="alert alert-success" role="alert">
    @ViewBag.mensaje
</div>
}
